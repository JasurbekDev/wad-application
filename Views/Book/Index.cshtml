@model IEnumerable<WAD.WebApp._7986.BookRent.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Book Details</h2>
<hr />

<button class="">@Html.ActionLink("Add Books", "AddBooks", new { id = 1 })</button>


<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Title)</th>
            <th>@Html.DisplayNameFor(m => m.Author)</th>
            <th>@Html.DisplayNameFor(m => m.PublishedDate)</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.PublishedDate</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = book.BookId})</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = book.BookId})</td>
            </tr>

        }
    </tbody>
</table>